    <form action="{{ path('conciergerie_ECEntreprise_deleteAbo', {'id': abonnement.id}) }}" method="post">

      <input type="submit" value="Supprimer" class="btn btn-danger" />

      <a href="{{ path('conciergerie_ECEntreprise_viewAbo', {'id': abonnement.id}) }}" class="btn btn-warning">

        Retour Ã  l'abonnement

      </a>

      
      {{ form_rest(form) }}
