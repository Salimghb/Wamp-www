{% trans_default_domain 'FOSUserBundle' %}


{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register',{'role': role} ), 'attr': {'class': 'Bloc_Inscription container'}}) }}

<!-- **************************************************************************** -->

<!-- Partie Fixe du formulaire qui hydrate les attributs de l'utilisateur -->
  <div class="input-group col-xs-8">
    {{ form_row(form.email, {'attr': {'class':'form-control','placeholder':'Entrez votre adresse mail'},'label':'Adresse mail :'}) }}
  </div>

  <div class="input-group col-xs-8">
    {{ form_row(form.username, {'attr': {'class':'form-control', 'placeholder':'Votre identifiant de connexion'},'label':"Nom d'utilisateur :"}) }}
  </div>

  <div class="input-group col-xs-8">
    {{ form_row(form.plainPassword.first, {'attr': {'class':'form-control', 'placeholder':'Saisissez votre mot de passe (6 caractères minimum)'},'label':"Mot de passe :"}) }}
  </div>

  <div class="input-group col-xs-8">
    {{ form_row(form.plainPassword.second, {'attr': {'class':'form-control', 'placeholder':'Confirmez votre mot de passe'},'label':"Confirmation mot de passe :"}) }}
  </div>
  <!-- ************************************************************************************ -->

  <!-- Partie du formulaire qui hydrate les attributs d'entreprise quand celui-ci s'enregistre en tant que tel -->
  {% if role == 'Entreprise' %}
  <div class="input-group col-xs-8">
    {{ form_row(form.entreprise.siret, {'attr': {'class':'form-control', 'placeholder':'Entrez les 10 chiffres de votre N° de SIRET'},'label':"Numéro de SIRET :"}) }}
  </div>

  <div class="input-group col-xs-8">
    {{ form_row(form.entreprise.responsable, {'attr': {'class':'form-control', 'placeholder':'Nom et prénom du responsable'},'label':"NOM et Prénom du responsable :"}) }}
  </div>


  <div class="input-group col-xs-8">
    <label>Adresse de l'entreprise :</label>
    {{ form_row(form.entreprise.adresse.num, {'attr': {'class':'form-control', 'placeholder':'Numéro de la rue (ex : 219)'}}) }}
  </div>

  <div class="input-group col-xs-8">
    {{ form_row(form.entreprise.adresse.rue, {'attr': {'class':'form-control', 'placeholder':'Nom de la rue (ex : Rue du Pressoir Neuf)'}}) }}
  </div>

  <div class="input-group col-xs-8">
    {{ form_row(form.entreprise.adresse.ville, {'attr': {'class':'form-control', 'placeholder':'Ville (ex : Ouvrouer-Les-Champs)'}}) }}
  </div>

  <div class="input-group col-xs-8">
    {{ form_row(form.entreprise.adresse.codePostal, {'attr': {'class':'form-control', 'placeholder':'Code Postal (ex : 45192)'}}) }}
  </div>

  <div class="input-group col-xs-8">
    {{ form_row(form.entreprise.adresse.numAppart, {'attr': {'class':'form-control', 'placeholder':'Numéro appartement ou batiment(ex : 12)'}}) }}
  </div>

  <div class="input-group col-xs-8">
    {{ form_row(form.entreprise.adresse.etage, {'attr': {'class':'form-control', 'placeholder':'Numéro étage (ex : 2)'}}) }}
  </div>

  <div class="input-group col-xs-8">
    {{ form_row(form.entreprise.adresse.complements, {'attr': {'class':'form-control', 'placeholder':'Informations complémentaires (ex : Sonette sur la gauche)'}}) }}
  </div>

  <div class="input-group col-xs-8">
    {{ form_row(form.entreprise.telephone, {'attr': {'class':'form-control', 'placeholder':'Téléphone du responsable'},'label':"Numéro de téléphone :"}) }}
  </div>

  <div class="input-group col-xs-8">
    {{ form_row(form.entreprise.site, {'attr': {'class':'form-control', 'placeholder':"URL du site de l'entreprise" },'label':"Site internet :"}) }}
  </div>
  <!-- ************************************************************************************* -->

  <!-- Partie qui hydrate les attributs de prestataire quand celui-ci s'enregistre en tant que tel -->
  {% elseif role =='Prestataire' %}
  <div class="input-group col-xs-8">
    {{ form_row(form.prestataire.siret, {'attr': {'class':'form-control', 'placeholder':'Entrez les 10 chiffres de votre N° de SIRET'},'label':"Numéro de SIRET :"}) }}
  </div>

  <div class="input-group col-xs-8">
    {{ form_row(form.prestataire.responsable, {'attr': {'class':'form-control', 'placeholder':'Nom et prénom du responsable'},'label':"NOM et Prénom du responsable :"}) }}
  </div>

  <div class="input-group col-xs-8">
    <label>Adresse du prestataire :</label>
    {{ form_row(form.prestataire.adresse.num, {'attr': {'class':'form-control', 'placeholder':'Numéro de la rue (ex : 219)'}}) }}
  </div>

  <div class="input-group col-xs-8">
    {{ form_row(form.prestataire.adresse.rue, {'attr': {'class':'form-control', 'placeholder':'Nom de la rue (ex : Rue du Pressoir Neuf)'}}) }}
  </div>

  <div class="input-group col-xs-8">
    {{ form_row(form.prestataire.adresse.ville, {'attr': {'class':'form-control', 'placeholder':'Ville (ex : Ouvrouer-Les-Champs)'}}) }}
  </div>

  <div class="input-group col-xs-8">
    {{ form_row(form.prestataire.adresse.codePostal, {'attr': {'class':'form-control', 'placeholder':'Code Postal (ex : 45192)'}}) }}
  </div>

  <div class="input-group col-xs-8">
    {{ form_row(form.prestataire.adresse.numAppart, {'attr': {'class':'form-control', 'placeholder':'Numéro appartement ou batiment(ex : 12)'}}) }}
  </div>

  <div class="input-group col-xs-8">
    {{ form_row(form.prestataire.adresse.etage, {'attr': {'class':'form-control', 'placeholder':'Numéro étage (ex : 2)'}}) }}
  </div>

  <div class="input-group col-xs-8">
    {{ form_row(form.prestataire.adresse.complements, {'attr': {'class':'form-control', 'placeholder':'Informations complémentaires (ex : Sonette sur la gauche)'}}) }}
  </div>

  <div class="input-group col-xs-8">
    {{ form_row(form.prestataire.telephone, {'attr': {'class':'form-control', 'placeholder':'Téléphone du responsable'},'label':"Numéro de téléphone :"}) }}
  </div>

  <div class="input-group col-xs-8">
    {{ form_row(form.prestataire.site, {'attr': {'class':'form-control', 'placeholder':"URL du site de l'entreprise" },'label':"Site internet :"}) }}
  </div>
  <!-- ************************************************************************************************* -->

  <!-- Partie qui hydrate les attributs de salarié quand celui-ci s'enregistre en tant que tel -->
  {% elseif role =='Salarie' %}
  <div class="input-group col-xs-8">
    {{ form_row(form.salarie.nom, {'attr': {'class':'form-control', 'placeholder':"ex: DURAND" },'label':"Nom :"}) }}
  </div>

  <div class="input-group col-xs-8">
    {{ form_row(form.salarie.prenom, {'attr': {'class':'form-control', 'placeholder':"ex: Jason" },'label':"Prénom :"}) }}
  </div>

  <div class="input-group col-xs-8">
    <label>Adresse personnelle :</label>
    {{ form_row(form.salarie.adresse.num, {'attr': {'class':'form-control', 'placeholder':'Numéro de la rue (ex : 219)'}}) }}
  </div>

  <div class="input-group col-xs-8">
    {{ form_row(form.salarie.adresse.rue, {'attr': {'class':'form-control', 'placeholder':'Nom de la rue (ex : Rue du Pressoir Neuf)'}}) }}
  </div>

  <div class="input-group col-xs-8">
    {{ form_row(form.salarie.adresse.ville, {'attr': {'class':'form-control', 'placeholder':'Ville (ex : Ouvrouer-Les-Champs)'}}) }}
  </div>

  <div class="input-group col-xs-8">
    {{ form_row(form.salarie.adresse.codePostal, {'attr': {'class':'form-control', 'placeholder':'Code Postal (ex : 45192)'}}) }}
  </div>

  <div class="input-group col-xs-8">
    {{ form_row(form.salarie.adresse.numAppart, {'attr': {'class':'form-control', 'placeholder':'Numéro appartement ou batiment(ex : 12)'}}) }}
  </div>

  <div class="input-group col-xs-8">
    {{ form_row(form.salarie.adresse.etage, {'attr': {'class':'form-control', 'placeholder':'Numéro étage (ex : 2)'}}) }}
  </div>

  <div class="input-group col-xs-8">
    {{ form_row(form.salarie.adresse.complements, {'attr': {'class':'form-control', 'placeholder':'Informations complémentaires (ex : Sonette sur la gauche)'}}) }}
  </div>

  <div class="input-group col-xs-8">
    <label for="basic-url">Sexe :</label>
    <p>
      {{ form_errors(form.salarie.sexe[0]) }}
      {{ form_widget(form.salarie.sexe[0]) }} {{ form_label(form.salarie.sexe[0]) }}
      {{ form_errors(form.salarie.sexe[1]) }}
      {{ form_widget(form.salarie.sexe[1]) }} {{ form_label(form.salarie.sexe[1]) }}
    </p>
  </div>

  <div class="input-group col-xs-8">
    {{ form_row(form.salarie.telephone, {'attr': {'class':'form-control', 'placeholder':"Saisissez votre numéro de téléphone" },'label':"Numéro de téléphone :"}) }}
  </div>

  <div class="input-group col-xs-8">
    {{ form_row(form.salarie.dateNaissance, {'label':"Date de naissance:"}) }}
  </div>

  {% endif %}
  <!-- ******************************************************************************* -->


  <div class="input-group col-xs-8">
    <input type="submit" class="btn btn-primary sub-btn" value="{{ 'registration.submit'|trans }}" />
  </div>

{{ form_end(form) }}
