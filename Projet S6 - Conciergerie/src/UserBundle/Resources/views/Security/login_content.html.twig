{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="form-group">
      <label for="username">Adresse mail : </label>
      <input type="text" id="username" name="_username" placeholder="ex : dupont@mail.com" value="{{ last_username }}" required="required" />
    </div>

    <div class="form-group">
      <label for="password">{{ 'security.login.password'|trans }} : </label>
      <input type="password" id="password" name="_password" placeholder="Saisissez votre mot de passe" required="required" />
    </div>

    <div class="form-group">
      <label for="remember-me">Se souvenir de moi ?</label>
      <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    </div>


    <div class="form-group">
      <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
      <b><a href="{{path('conciergerie_preregister')}}">Vous n'Ãªtes pas encore inscrit ?</a></b>

    </div>




</form>
